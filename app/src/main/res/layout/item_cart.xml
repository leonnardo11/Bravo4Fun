<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayoutProduct1"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/rectangle_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ProdutoTitulo"
            android:layout_width="148dp"
            android:layout_height="29dp"
            android:layout_marginEnd="39dp"
            android:padding="5dp"
            android:text="Show do CidadÃ£o"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/ProdutoQuant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.876"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/ProdutoQuant"
            android:layout_width="187dp"
            android:layout_height="34dp"

            android:scaleX="0.5"
            android:scaleY="0.5"
            android:text="Quantidade: 2"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/ProdutoPreco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toEndOf="@+id/image" />

        <TextView
            android:id="@+id/ProdutoPreco"
            android:layout_width="239dp"
            android:layout_height="35dp"

            android:layout_marginBottom="4dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:text="Valor: "
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toEndOf="@+id/image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
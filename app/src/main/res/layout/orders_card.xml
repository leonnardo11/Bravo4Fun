<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"><![CDATA[

                    />









        />











        ]]>

        <ImageView
            android:id="@+id/imagem"
            android:layout_width="139dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pedido_realizado"
            tools:srcCompat="@drawable/ic_baseline_done_all_24" />

        <TextView
            android:id="@+id/pedidoid"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@+id/imagem"
            android:padding="5dp"
            android:text="Pedido: "
            android:textSize="17sp" />

        <TextView
            android:id="@+id/data"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-147dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="225dp"
            android:layout_marginRight="225dp"
            android:layout_toEndOf="@+id/imagem"
            android:padding="5dp"
            android:text="Data: "
            android:textSize="17sp" />

        <TextView
            android:id="@+id/produto"
            android:layout_width="201dp"
            android:layout_height="42dp"


            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="-5dp"
            android:layout_marginBottom="52dp"
            android:layout_toEndOf="@+id/imagem"
            android:text="Produto"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/quant"
            android:layout_width="134dp"
            android:layout_height="wrap_content"


            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="26dp"
            android:layout_toEndOf="@+id/imagem"
            android:text="2 Unidades"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="88dp"
            android:layout_height="wrap_content"


            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/imagem"
            android:text="Total:"
            android:textSize="16sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>